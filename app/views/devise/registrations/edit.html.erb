<div class="row">
  <div class="col m3 s12">
    <ul class="collection">
      <li class="collection-item grey darken-1"><%= link_to "プロフィールを編集", edit_user_registration_path, class: "white-text" %>
      </li>
      <li class="collection-item"><%= link_to "プロフィールを確認", user_path(current_user.id) , class: 'grey-text text-darken-1'%>
      </li>
    </ul>    
  </div>

  <div class="col m9 s12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <%= render 'shared/devisemes' %>

      <div class="card">
        <div class="card-content">
          <span class="card-title center-align teal-text text-darken-2">音楽プロフィールの編集</span>

          <div class="input-field">
            <i class="material-icons prefix">person</i>
            <%= f.text_field :fullname,  autocomplete: "名前", id: "fullname" %>
            <label for="fullname" class='active'>名前</label>
          </div>

          <div class="input-field">
            <i class="material-icons prefix">comment</i>
            <%= f.text_area :description, autocomplete: "description" , rows: 5, class: "materialize-textarea",id: 'description' %>
            <label for="description" class='active'>自己紹介</label>
          </div>
       
          <div class="input-field">
            <i class="material-icons prefix">school</i>
            <%= f.text_area :belong, rows: 5, id: "belong", class: "materialize-textarea" %>
            <label for="belong" class='active'>所属（任意）</label>
          </div>

          <div class="input-field">
            <i class="material-icons prefix">grade</i>
            <%= f.text_area :award, rows: 5, cols: 25, id: "award" ,class: "materialize-textarea"%>
            <label for="award" class='active'>受賞歴（任意）</label>
          </div>

          <div class="button-center">
            <button class="btn waves-effect waves-light grey darken-1" type="submit" name="action" >更新する
              <i class="material-icons right">send</i>
            </button>
          </div>

        </div>
      </div>

      <div class="card">
        <div class="card-content">
          <span class="card-title center-align teal-text text-darken-2">SNS</span>

          
          <div class="input-field">
            <i class="material-icons prefix">add</i>
            <%= f.text_field :twitter, id: "twitter", placeholder: 'ツイッターアカウント名(@は不要です。)' %>
            <label for="twitter" class='active'>Twitterアカウント</label>
          </div>
          
          <div class="input-field">
            <i class="material-icons prefix">add</i>
            <%= f.text_field :webpage, id: "webpage",placeholder: 'https://~' %>
            <label for="webpage" class='active'>ホームページ　URL</label>
          </div>

          <div class="input-field">
            <i class="material-icons prefix">add</i>
            <%= f.text_field :blog, id: "blog",placeholder: 'https://~' %>
            <label for="blog" class='active'>ブログ　URL</label>
          </div>
          

          <div class="button-center">
            <button class="btn waves-effect waves-light grey darken-1" type="submit" name="action" >更新する
              <i class="material-icons right">send</i>
            </button>
          </div>

        </div>
      </div>

      <div class="card">
        <div class="card-content">
          <span class="card-title center-align teal-text text-darken-2">その他の編集</span>

          <div class="input-field">
            <i class="material-icons prefix">music_note</i>
            <%= f.text_field :sonoligoid,  autocomplete: "SonoLigo ID" %>
            <%= f.label :sonoligoid , class: 'active'%><br />
          </div>

          <div class="input-field">
            <i class="material-icons prefix">mail</i>
            <%= f.email_field :email, autocomplete: "email" ,id: "email" %>
            <label for="email" class='active'>メールアドレス</label>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>



          <div class="input-field">
            <i class="material-icons prefix">lock</i>
            <%= f.password_field :password, autocomplete: "off" %>
            <%= f.label :password , class: 'active'%>
            <i>(変更がないならば、空欄で構いません。)</i><br />
          </div>

          <div class="input-field">
            <i class="material-icons prefix">lock_outline</i>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <%= f.label :password_confirmation , class: 'active'%><br />
          </div>

          <div class="button-center">
            <button class="btn waves-effect waves-light grey darken-1" type="submit" name="action" >更新する
              <i class="material-icons right">send</i>
            </button>
          </div>


        </div>
      </div>
    <% end %>
  </div>
</div>


<h3>アカウントを削除しますか？</h3>

<p>この操作は取り消せません。 <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>


