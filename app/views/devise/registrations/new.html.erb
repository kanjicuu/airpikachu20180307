<div class="row">
  <div class="card-panel" id='login-size'>

    <h5 class='center-align'>Sonoligoに登録しよう。</h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render 'shared/devisemes' %>


      <div class="input-field">
        <i class="material-icons prefix">mail</i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.label :email, class: 'active'  %><br/>
      </div>

      <div class="input-field">
        <i class="material-icons prefix">person</i>
        <%= f.text_field :fullname,  autocomplete: "名前" %>
        <%= f.label :fullname , class: 'active' %><br />
      </div>

      <div class="input-field">
        <i class="material-icons prefix">music_note</i>
        <%= f.text_field :sonoligoid,  autocomplete: "SonoLigo ID" %>
        <%= f.label :sonoligoid , class: 'active'%><br />
      </div>

      <div class="input-field">
        <i class="material-icons prefix">lock</i>
        <%= f.password_field :password, autocomplete: "off" %>
        <%= f.label :password , class: 'active'%>
      </div>

      <div class="input-field">
        <i class="material-icons prefix">lock_outline</i>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <%= f.label :password_confirmation , class: 'active'%><br />
      </div>

      <div class="center-align">
        <%= f.submit "登録", class: 'waves-effect waves-light btn-large' %>
      </div>
    <% end %>

    <br>
    <div class="center-align">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

